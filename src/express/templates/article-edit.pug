extends layout.pug

block content

  main
    section.modal.modal--flex
      .popup.popup--new-publication.popup--flex
        .new-publication
          form(action='#', method='POST')
            .new-publication__header
              h1 Редактирование публикации
              .new-publication__date-form
                h3 Дата публикации
                .new-publication__date-form-division
                  .new-publication__date-block
                    label(for='new-publication-date', aria-label='Календарь')
                    input#new-publication-date(type='text' name='createdDate' value=`${article.createdDate}`)
              button.new-publication__button.button.button--colored(type='submit') Опубликовать
            button.popup__button.button.button--popup-close(type='button', aria-label='Закрыть окно' onclick='history.back()')
              | Закрыть
              | окно
            .new-publication__form.form
              .form__wrapper.form__wrapper--intro
                .form__field
                  label
                    input(type='text', placeholder='Заголовок', value=`${article.title}`, required='')
                .form__field.form__field--post-image
                  label
                    input#image-name-field(type='text', value='moya_mashinka.jpg', placeholder='Фотография', readonly='')
                  .form__image-loader.form__image-loader--publication
                    label
                      input.visually-hidden(type='file')
                      | Обзор
                  button.button.button--transparent Удалить
                .form__field-categories(style=`
                      display: flex;flex-wrap: wrap;
                      padding: 30px 0 0;
                      justify-content: flex-start;
                      align-items: center;`
                    )
                  each category, index in categories
                    .new-publication__checkbox.new-publication__checkbox--auto
                      input(type='checkbox' id=`checkbox-auto-${index}` name='checkbox-auto' value=category checked=(article.category.includes(category)))
                      label(for=`checkbox-auto-${index}`)= category
                  a.new-publication__form-link.button.button--transparent(href='#') Добавить категорию
              .form__wrapper.form__wrapper--text
                .form__field.form__field--publication-text
                  label
                    textarea(rows='2' name='announe' placeholder='Анонс публикации')= article.announce
                .form__field.form__field--publication-text
                  label
                    textarea(rows='5' name='fullText' placeholder='Полный текст публикации')= article.fullText
      .modal__overlay

block scripts
  script(src='/js/vendor.js')
  script(src='/js/main.js')
